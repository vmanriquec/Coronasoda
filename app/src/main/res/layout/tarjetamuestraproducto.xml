<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:paddingBottom="4dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/idproductop2"
                android:layout_width="3dp"
                android:layout_height="2dp"
                android:inputType="textNoSuggestions"


                />

            <TextView
                android:id="@+id/inventario"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/imagen"
                android:layout_alignEnd="@+id/imagen"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-29dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="95dp"
                android:background="@drawable/circulofondo"
                android:hint="n"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="62dp"
                android:hint="ItemName"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nombre"
                android:layout_marginStart="150dp"
                android:layout_marginBottom="-24dp"
                android:layout_toEndOf="@+id/imagen"
                android:hint="Price"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ingredientes"
                android:layout_width="186dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/imagen"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="94dp"
                android:layout_height="83dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="99dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonmas1"
                android:layout_width="55dp"
                android:layout_height="62dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/motofuerte"
                android:elevation="1dp"
                android:text="+"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
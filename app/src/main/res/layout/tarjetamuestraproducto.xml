<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="4dp"
        app:cardElevation="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/idproductop2"
                    android:layout_width="3dp"
                    android:layout_height="2dp"
                    android:inputType="textNoSuggestions"


                    />

                <TextView
                    android:id="@+id/inventario"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_alignStart="@+id/imagen"
                    android:layout_alignEnd="@+id/imagen"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-29dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="90dp"
                    android:background="@drawable/circulofondo"
                    android:hint="n"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="62dp"
                    android:hint="ItemName"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/nombre"
                    android:layout_marginStart="122dp"
                    android:layout_marginBottom="-24dp"
                    android:layout_toEndOf="@+id/imagen"
                    android:hint="Price"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ingredientes"
                    android:layout_width="186dp"
                    android:layout_height="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@+id/imagen"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="86dp"
                    android:layout_height="81dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="28dp"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <Button
                android:id="@+id/botonmas1"
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/motodelivery"
                android:elevation="1dp"
                android:paddingLeft="8dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>